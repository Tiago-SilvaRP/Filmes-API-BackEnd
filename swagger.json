{
  "openapi": "3.0.4",
  "info": {
    "title": "MovieFlix API",
    "description": "API responsável por gerenciar os filmes do movieFlix",
    "version": "0.1.9"
  },
  "paths": {
    "/movies": {
      "get": {
        "tags": ["Movie"],
        "summary": "Obtem todos os filmes",
        "responses": {
          "200": {
            "description": "Retorna uma lista de filmes.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Movie"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Movie": {
        "type": "object",
        "required": ["title_key"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID do filme"
          },
          "title": {
            "type": "string",
            "description": "Titulo do Filme"
          },
          "title_key": {
            "type": "string",
            "description": "Titulo unico do filme"
          },
          "release_date": {
            "type": "string",
            "format": "date",
            "description": "Data de lançamento do filme"
          },
          "genre_id": {
            "type": "integer",
            "description": "Gênero do filme"
          },
          "genres": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "description": "ID do genero"
              },
              "name": {
                "type": "string",
                "description": "Nome do Genero"
              }
            }
          },
          "language_id": {
            "type": "integer",
            "descritpion": "Idioma do filme"
          },
          "languages": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "description": "ID do idioma"
              },
              "name": {
                "type": "string",
                "description": "Nome do idioma"
              }
            }
          },
          "oscar_count": {
            "type": "integer",
            "description": "Quantidade de oscars ganhos pelo filme"
          }
        }
      }
    }
  }
}
